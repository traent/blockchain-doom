{
  "compilerOptions": {
    "module": "ES2022",
    "lib": [
      "ES2022"
    ],
    "types": [
      "Node"
    ],
    "target": "ES2022",
    "moduleResolution": "Node",
    "outDir": "dist/",
    "baseUrl": "src/",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
  },
  "include": [
    "src/**/*.ts",
    "rollup.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
